<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.hardy.sapui5table.controller.home"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f" xmlns:card="sap.f.cards">
	<Shell id="shell1">
		<App id="app">
			<pages>
				<Page title="{i18n>homeTitle}" id="page" class="sapUiContentPadding" titleLevel="H3">
					<headerContent>
						<Button icon="sap-icon://home"></Button>
					</headerContent>
					<content>
						<f:Card class="sapUiSmallMargin" width="300px">
							<f:header>
								<card:Header title="SAPUI5 Table Examples" subtitle="Click on the Interested button to access demo application"
									iconSrc="sap-icon://table-view"/>
							</f:header>
							<f:content>
								<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
									<VBox justifyContent="SpaceBetween">
										<Text text="SAPUI5 Tables" class="bulletlist"/>
										<Text text="Github code sample link" class="bulletlist"/>
										<Text text="Select rows of sapui5 table based on user selection type" class="bulletlist"/>
									</VBox>
									<HBox justifyContent="SpaceBetween">
										<Button text="Interested" press="onNavToTable" type="Emphasized"/>
									</HBox>
								</VBox>
							</f:content>
						</f:Card>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>