<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.hardy.sapui5table.controller.home"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.f" xmlns:card="sap.f.cards" xmlns:l="sap.ui.layout">
	<Shell id="shell1">
		<App id="app">
			<pages>
				<Page title="{i18n>homeTitle}" enableScrolling="false" id="homePage" class="sapUiResponsiveContentPadding pageHeader" titleLevel="H3">
					<headerContent >
						<!--<Button icon="sap-icon://home" class="barIcon"></Button>-->
					</headerContent>
					<content>
						<l:Grid defaultSpan="L4 M6 S12">
							<l:content>
								<!--############## 1st Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 Table Examples" subtitle="Click on the Interested button to access demo application"
											iconSrc="sap-icon://table-view"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="SAPUI5 Tables" class="bulletlist"/>
												<Text text="Select rows of sapui5 table based on user selection type" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToTable" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
								<!--############## 2th Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 Semantic Page" subtitle="Click on the Interested button to access demo application"
											iconSrc="sap-icon://screen-split-one"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="SAPUI5 Semantic Page" class="bulletlist"/>
												<Text text="Master Detail Page in a single view" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToTable" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
								<!--############## 3th Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 List Example" subtitle="Click on the Interested button to access demo application" iconSrc="sap-icon://filter"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="SAPUI5 List" class="bulletlist"/>
												<Text text="Data filtering in sap.m.list" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToTable" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
								<!--############## 4th Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 Fragment Example" subtitle="Click on the Interested button to access demo application"
											iconSrc="sap-icon://ui-notifications"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="SAPUI5 Fragment" class="bulletlist"/>
												<Text text="Data binding in fragments" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToTable" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
								<!--############## 5th Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 Data Binding" subtitle="SAPUI5 Grid And Types Of Data Binding" iconSrc="sap-icon://grid"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="Element Binding" class="bulletlist"/>
												<Text text="Property Binding" class="bulletlist"/>
												<Text text="Aggregation Binding" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToBinding" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
								<!--############## 6th Card ##############-->
								<f:Card class="sapUiResponsiveMargin" width="300px">
									<f:header>
										<card:Header title="SAPUI5 Charts" subtitle="Click on the Interested button to access demo application"
											iconSrc="sap-icon://business-objects-experience"/>
									</f:header>
									<f:content>
										<VBox height="115px" class="sapUiSmallMargin" justifyContent="SpaceBetween">
											<VBox justifyContent="SpaceBetween">
												<Text text="SAPUI5 List" class="bulletlist"/>
												<Text text="Data display in different chart forms" class="bulletlist"/>
												<Link text="Github code sample" target="_blank" class="bulletlist" href="https://github.com/hardycode/sapui5table"/>
											</VBox>
											<HBox justifyContent="SpaceBetween">
												<Button text="Interested" press="onNavToTable" type="Emphasized"/>
											</HBox>
										</VBox>
									</f:content>
								</f:Card>
							</l:content>
						</l:Grid>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>